<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wave.scouting" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>XYZ-Scout</name>
    <description>
        Wave Scouting App that takes in scouting data and outputs a csv file and a table for export to a program like Numbers or Tableau.
    </description>
    <author email="ervinc9876@oshkosh.k12.wi.us" href="http://waverobotics.com">
        Wave Scouting Team
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
